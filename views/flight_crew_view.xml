<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_flight_crew_tree">
            <field name="name">hr.employee</field>
            <field name="model">hr.employee</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="document_id"/>
                    <field name="name"/>
                    <field name="crew_degree"/>
                    <field name="department_id" string="Reparto"/>
                </tree>
            </field>
        </record>

        <record id="view_flight_crew_form" model="ir.ui.view">
            <field name="name">hr.employee</field>
            <field name="model">hr.employee</field>
            <field name="arch" type="xml">
                <form string="NUEVO">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                            <group>
                                <field name="medical_record_ids"/>
                            </group>
                        </group>
                        <group>
                            <notebook>
                                <page string="DATOS DE FICHA MEDICA">
                                    <group>
                                        <field name="crew_result_id" options="{ 'no_open': True}"/>
                                        <field name="crew_date_report" />
                                        <field name="crew_referent_document" />
                                        <field name="crew_observation" />
                                    </group>
                                </page>
                            </notebook>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record model="ir.actions.act_window" id="action_flight_crew">
            <field name="name">TRIPULANTES</field>
            <field name="res_model">hr.employee</field>
            <field name="view_mode">tree,form,kanban</field>
        </record>

        <menuitem name="Tripulantes" id="menu_action_flight_crew" parent="menu_flight_records" action="action_flight_crew"/>

    </data>
</odoo>